<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:L4D2AddonAssistant.ViewModels"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="L4D2AddonAssistant.Views.AddonNodeEnableButton"
             x:DataType="vm:AddonNodeSimpleViewModel">
  <Design.DataContext>
    <vm:AddonNodeSimpleViewModelDesign/>
  </Design.DataContext>
  <Button
    Name="button"
    Command="{Binding ToggleEnabledCommand}"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Background="Transparent">
    <PathIcon
      Name="icon"
      Width="25"
      Height="25"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"/>
  </Button>
</UserControl>
