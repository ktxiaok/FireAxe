<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FireAxe.ViewModels"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="FireAxe.Views.AddonIconView"
             x:DataType="vm:AddonNodeSimpleViewModel">
  <Panel>
    <Image
      Name="image"
      Source="{Binding Image}"
      IsVisible="{Binding ShouldShowImage, FallbackValue=False}"
      Stretch="Uniform"/>
    <PathIcon
      Name="unknownIcon"
      Data="{StaticResource icon_question}"
      IsVisible="{Binding ShouldShowUnknownIcon, FallbackValue=False}"/>
    <PathIcon
      Name="folderIcon"
      Data="{StaticResource icon_folder}"
      IsVisible="{Binding ShouldShowFolderIcon, FallbackValue=False}"/>
  </Panel>
</UserControl>
