<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FireAxe.ViewModels"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="FireAxe.Views.AddonNodeEnableButton"
             x:DataType="vm:AddonNodeSimpleViewModel">
  <Design.DataContext>
    <vm:AddonNodeViewModelDesign/>
  </Design.DataContext>
  
  <Button
    Name="button"
    Command="{Binding ToggleEnabledCommand}"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Background="Transparent">
    <Path
      Name="icon"
      Stretch="Uniform"
      Stroke="{DynamicResource brush_enable_button_stroke}"
      StrokeThickness="0.5"
      Width="25"
      Height="25"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"/>
  </Button>
</UserControl>
