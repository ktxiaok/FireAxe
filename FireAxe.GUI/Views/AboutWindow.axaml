<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:FireAxe"
        xmlns:r="using:FireAxe.Resources"
        xmlns:interopservices="using:System.Runtime.InteropServices"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="300"
        x:Class="FireAxe.Views.AboutWindow"
        Title="{x:Static r:Texts.AboutApp}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
  <StackPanel
    Orientation="Vertical"
    VerticalAlignment="Top"
    Margin="15">
    <StackPanel.Styles>
      <Style Selector=":is(Control)">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
      </Style>
    </StackPanel.Styles>

    <StackPanel
      Orientation="Vertical"
      Margin="0, 0, 5, 5">
      <StackPanel
        Orientation="Horizontal"
        Margin="0, 0, 5, 5">
        <Image
          Source="/Assets/AppLogo.ico"
          Width="64"
          Height="64"
          Margin="0, 0, 5, 0"/>
        <SelectableTextBlock
          Text="FireAxe"
          FontSize="22"
          FontWeight="Bold"/>
      </StackPanel>
      <StackPanel
        Orientation="Horizontal">
        <SelectableTextBlock
          Text="{x:Static r:Texts.VersionColon}"
          FontSize="15"/>
        <SelectableTextBlock
          Text="{x:Static local:AppGlobal.VersionString}"
          FontSize="15"/>
        
        <SelectableTextBlock
          Text="Powered by Avalonia!"
          Margin="10, 0, 0, 0"/>
      </StackPanel>
    </StackPanel>

    <SelectableTextBlock
      Text="{Binding Source={x:Static interopservices:RuntimeInformation.FrameworkDescription}, StringFormat=Framework: {0}}"
      Margin="0, 0, 0, 5"/>

    <Panel
      Margin="0, 5, 5, 5">
      <SelectableTextBlock
        Text="{x:Static r:Texts.AppDescription}"
        FontSize="16"/>
    </Panel>
    
    <StackPanel
      Orientation="Horizontal"
      Margin="0, 5, 5, 5">
      <SelectableTextBlock
        Text="{x:Static r:Texts.AuthorColon}"/>
      <SelectableTextBlock
        Text="KtOrangeeK(ktxiaok)  ktxiaok@foxmail.com"/>
    </StackPanel>

    <StackPanel
      Orientation="Horizontal"
      Margin="0, 5, 5, 5">
      <SelectableTextBlock
        Text="Github Repo Link: "/>
      <SelectableTextBlock
        Text="{x:Static local:AppGlobal.GithubRepoLink}"/>
    </StackPanel>

    <StackPanel
      Orientation="Horizontal"
      Margin="0, 5, 5, 5">
      <SelectableTextBlock
        Text="License: "/>
      <SelectableTextBlock
        Text="{x:Static local:AppGlobal.License}"/>
    </StackPanel>
  </StackPanel>
</Window>
